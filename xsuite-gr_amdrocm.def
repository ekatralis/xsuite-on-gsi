Bootstrap: localimage
From: xsuite_amdrocm.sif

%post
apt update
apt install -y software-properties-common

# install GNU Radio
####################
add-apt-repository -y ppa:gnuradio/gnuradio-releases
apt update
DEBIAN_FRONTEND=noninteractive apt install -y gnuradio python3-packaging

# cleanup
##########
apt purge -y software-properties-common .\*-doc$
apt autoremove -y
apt clean -y
rm -rf /var/lib/apt/lists/*
pip cache purge






